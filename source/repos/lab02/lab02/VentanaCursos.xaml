<Window x:Class="lab02.VentanaCursos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab02"
        mc:Ignorable="d"
        Title="VentanaCursos" Height="300" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="199*"/>

            <ColumnDefinition Width="401*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Nombre"
               Grid.Column="0"
               FontSize="25"
               VerticalAlignment="Center" Margin="43,0,36,0" Height="42"
               />
        <Label Content="Apellido"
               Grid.Column="0"
               Grid.Row="1"
               FontSize="25" 
                VerticalAlignment="Center" Margin="43,0,48,0" Height="43"
               />
        <TextBox Grid.Column="1"
        Grid.Row="0" Margin="4,26,34,27"
        />
        <TextBox Grid.Column="1"
                 Grid.Row="1" Margin="4,26,34,25"
                 />
        <Button Content="Agregar"
                Grid.Row="2"
                Background="Gray" 
                FontSize="25"
                VerticalAlignment="Top" Margin="155,10,232,0" Height="59" Grid.ColumnSpan="2"
                />
    </Grid>
</Window>
